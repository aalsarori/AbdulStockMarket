    ViewData["Title"] = "Home page";
}

@Html.AntiForgeryToken()
<button type="button" id="invokeAjaxHello">Run Hello</button>
@Html.AntiForgeryToken()
<button type="button" id="doubleYourMoney">Attempt to double your money</button>

<div id="result">----</div>
<div class="text-center">
    <h1 class="display-4">Welcome to B(l)ra(ck)d Rock Finances</h1>

    <div id="result">Date: </div>

    <p>Cash: </p>
    <p>Shares: </p>

    <form action="/action_page.php">
        <label for="cars">Choose Ticker:</label>
        <select name="cars" id="cars">
            <option value="volvo">Volvo</option>
            <option value="saab">Saab</option>
            <option value="opel">Opel</option>
            <option value="APPL">Apple (APPL)</option>
        </select>
        <br><br>
        <input type="submit" value="Submit">
    </form>

    <br />
     @Html.AntiForgeryToken()
    <button type="button" id="invokeData">(TEST)</button>
    <br />
     @Html.AntiForgeryToken()
    <button type="button" id="invokeAjaxHello">Buy (lets you choose how much to buy and adds to shares)</button>
    <br />
     @Html.AntiForgeryToken()
    <button type="button" id="invokeAjaxHello">Sell (lets you choose how much to sell and adds to cash)</button>
    <br />
     @Html.AntiForgeryToken()
    <button type="button" id="invokeAjaxHello">Hold (goes to next day without action)</button>
    <br />
     @Html.AntiForgeryToken()
    <button type="button" id="invokeAjaxHello">Quit (sells all, shows final result)</button>
    <br />


</div>

@section Scripts
    {
    <script type="text/javascript">
        $("#invokeData").click(function() {
            $.ajax({
                type: "POST",
                url: "/Index?handler=OnPostGetDate",
                contentType: 'application/x-www-form-urlencoded',
                dataType: "json",
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function(message) {
                    document.getElementById("result").innerHTML = message;
                }
            });

        });

        $("#invokeAjaxHello").click(function() {
            $.ajax({
                type: "POST",
                url: "/Index?handler=GetAjax",
                data: { "name": " World!" },
                contentType: 'application/x-www-form-urlencoded',
                dataType: "json",
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function(message) {
                    document.getElementById("result").innerHTML = message;
                }
            });

        });

        $("#doubleYourMoney").click(function() {
            $.ajax({
                type: "POST",
                url: "/Index?handler=DoubleMoney",
                data: { "description": "please", "value": 2 },
                contentType: 'application/x-www-form-urlencoded',
                dataType: "json",
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function(message) {
                    document.getElementById("result").innerHTML = message;
                }
            });
        });
        </script>
}

